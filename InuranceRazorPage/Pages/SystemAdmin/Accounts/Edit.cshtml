@page
@model InuranceRazorPage.Pages.SystemAdmin.Accounts.EditModel
@{
}


<h1>Edit</h1>

<h4>Account</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AccountDto.Firstname" class="control-label"></label>
                <input asp-for="AccountDto.Firstname" class="form-control" />
                <span asp-validation-for="AccountDto.Firstname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccountDto.Fathername" class="control-label"></label>
                <input asp-for="AccountDto.Fathername" class="form-control" />
                <span asp-validation-for="AccountDto.Fathername" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccountDto.Lastname" class="control-label"></label>
                <input asp-for="AccountDto.Lastname" class="form-control" />
                <span asp-validation-for="AccountDto.Lastname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccountDto.Username" class="control-label"></label>
                <input asp-for="AccountDto.Username" class="form-control" />
                <span asp-validation-for="AccountDto.Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccountDto.Password" class="control-label"></label>
                <input asp-for="AccountDto.Password" class="form-control" type="password" />
                <span asp-validation-for="AccountDto.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccountDto.Phone" class="control-label"></label>
                <input asp-for="AccountDto.Phone" class="form-control" type="tel" pattern="[0-9]{4}[0-9]{6}" />
                <span asp-validation-for="AccountDto.Phone" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="AccountDto.Gender" class="control-label">Gender</label>
                <div>
                    @foreach (var gender in Model.GenderOptions)
                    {
                        <input type="radio" asp-for="AccountDto.Gender" value="@gender" />
                        @gender
                        <br />
                    }
                    <span asp-validation-for="AccountDto.Gender" class="text-danger"></span>
                </div>
            </div>
            <div>
                <label asp-for="AccountDto.Dob" class="control-label">Date Of Birth</label>
                <input class="form-control" asp-for="AccountDto.Dob" type="date" />
                <span asp-validation-for="AccountDto.Dob" class="text-danger"></span>
            </div>

            <div>
                <label asp-for="AccountDto.RoleId" class="control-label">Role</label>
                <select name="AccountDto.RoleId">
                    <option value="0">Select a Role</option>
                    @foreach (var item in Model.Roles)
                    {
                        <option value="@item.Id">@item.RoleName</option>
                    }
                </select>
                <span asp-validation-for="AccountDto.RoleId" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="AccountDto.Subcity" class="control-label">Address</label>
                <select name="AccountDto.Subcity" onchange="GetWoreda()" id="Subcity">
                    <option value="0">Subcity</option>
                    @foreach (var item in Model.Subcities)
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                </select>
                <span asp-validation-for="AccountDto.Subcity" class="text-danger"></span>
                <div id="_WoredaPartial">
                </div>
            </div>


            <div class="form-group" style="margin-top:10px;">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="../ManageAccounts">Back to List</a>
</div>
