@page
@model InuranceRazorPage.Pages.SystemAdmin.ManageAccountsModel
@{
    Layout = "_admin";
}


<!-- top navigation bar -->
<partial name="_AdminNav"></partial>
<!-- top navigation bar -->
<!-- offcanvas -->
<partial name="_SystemAdmin"></partial>
<!-- offcanvas -->
<main class="mt-5 pt-3">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <h4>Manage Accounts</h4>
            </div>
        </div>
        <a asp-page="./Accounts/Create">
            <div class="row">
                <div class="col-md-3 mb-3" }">
                    <div class="card bg-primary text-white h-100">
                        <div class="card-body py-5">Add User</div>
                    </div>
                </div>
            </div>
        </a>
        <div class="row">
            <div class="col-md-12 mb-3">
                <div class="card">
                    <div class="card-header">
                        <span><i class="bi bi-table me-2"></i></span> Insured members table
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">

<table id="example"
class="table table-striped data-table"
style="width: 100%">
    <thead>
        <tr>
            <th>Firstname</th>
            <th>Username</th>
            <th>Password Hash</th>
            <th>Password Salt</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Accounts) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Firstname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PasswordHash)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PasswordSalt)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}       
    </tbody>
    <tfoot>
        <tr>
            <th>Firstname</th>
            <th>Username</th>
            <th>Password Hash</th>
            <th>Password Salt</th>
        </tr>
    </tfoot>
</table>


                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>